{
  "name": "indoqa",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "compile": "lerna run compile",
    "e2e": "yarn package && lerna run e2e --stream",
    "package": "yarn pkg:check && lerna run package --stream",
    "pkg:run": "manypkg run",
    "pkg:check": "manypkg check",
    "pkg:fix": "manypkg fix",
    "postinstall": "yarn package",
    "prepare": "lerna run prepare",
    "test": "lerna run test"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "@manypkg/cli": "0.17.0",
    "@types/chai": "4.2.14",
    "@types/css": "0.0.31",
    "@types/enzyme": "3.10.8",
    "@types/enzyme-adapter-react-16": "1.0.6",
    "@types/history": "4.7.8",
    "@types/jest": "26.0.19",
    "@types/lodash": "4.14.165",
    "@types/mocha": "8.2.0",
    "@types/node": "14.14.14",
    "@types/react": "17.0.0",
    "@types/react-dom": "17.0.0",
    "@types/react-redux": "7.1.12",
    "@types/react-router": "5.1.8",
    "@types/react-router-dom": "5.1.6",
    "@types/react-syntax-highlighter": "13.5.0",
    "@types/webpack-env": "1.16.0",
    "cypress": "6.1.0",
    "husky": "4.3.8",
    "lerna": "4.0.0",
    "lint-staged": "10.5.4",
    "prettier": "2.2.1",
    "react-scripts": "4.0.3",
    "rimraf": "3.0.2",
    "serve": "11.3.2",
    "source-map-explorer": "2.5.1",
    "start-server-and-test": "1.11.6",
    "typescript": "4.1.3"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "singleQuote": true,
    "bracketSpacing": false
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  }
}
