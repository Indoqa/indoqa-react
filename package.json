{
  "name": "indoqa",
  "private": true,
  "scripts": {
    "ci:build": "yarn package && lerna run e2e --stream",
    "package": "yarn pkg:check && lerna run package --stream",
    "pkg:run": "manypkg run",
    "pkg:check": "manypkg check",
    "pkg:fix": "manypkg fix",
    "postinstall": "yarn package"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "@manypkg/cli": "0.18.0",
    "@types/chai": "4.2.21",
    "@types/css": "0.0.33",
    "@types/enzyme": "3.10.9",
    "@types/enzyme-adapter-react-16": "1.0.6",
    "@types/history": "4.7.9",
    "@types/jest": "27.0.1",
    "@types/lodash": "4.14.172",
    "@types/mocha": "9.0.0",
    "@types/node": "17.0.38",
    "@types/react": "18.0.10",
    "@types/react-dom": "18.0.5",    
    "@types/react-router": "5.1.16",
    "@types/react-router-dom": "5.1.8",
    "@types/react-syntax-highlighter": "13.5.2",
    "@types/webpack-env": "1.16.2",
    "cypress": "6.1.0",
    "husky": "4.3.6",
    "lerna": "4.0.0",
    "lint-staged": "10.5.4",
    "prettier": "2.3.2",
    "react-scripts": "5.0.1",
    "rimraf": "3.0.2",
    "serve": "12.0.0",
    "source-map-explorer": "2.5.2",
    "start-server-and-test": "1.13.1",
    "typescript": ""
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "singleQuote": true,
    "bracketSpacing": false
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  }
}
